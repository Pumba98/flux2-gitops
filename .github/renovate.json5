{
  "extends": [
    "config:base",
    ":disableRateLimiting",
    ":semanticCommits",
    ":rebaseStalePrs",
    ":separateMultipleMajorReleases",
    ":separatePatchReleases",
    "github>Pumba98/flux2-gitops//.github/renovate/commitMessage.json5",
    "github>Pumba98/flux2-gitops//.github/renovate/labels.json5"
  ],
  "dependencyDashboardTitle": "Renovate Dashboard",
  "suppressNotifications": ["prIgnoreNotification"],
  "flux": {
    "fileMatch": [ "^[^\\.]*\\.ya?ml$" ]
  },
  "helm-values": {
    "fileMatch": [ "^apps/[^\\.]*\\.ya?ml$" ]
  },
  "kubernetes": {
    "fileMatch": [ "^apps/[^\\.]*\\.ya?ml$" ]
  },
  "regexManagers": [
    {
      "fileMatch": [ "^[^\\.]*\\.ya?ml$" ],
      "matchStrings": [
        "datasource=(?<datasource>\\S+) depName=(?<depName>.*?)\n *version: (?<currentValue>.*)\n"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}helm{{/if}}"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["k3s-io/k3s"],
      "separateMultipleMinor": true
    },
    {
      "description": "Use custom versioning for Minio",
      "matchDatasources": ["docker"],
      "versioning": "regex:^RELEASE\\.(?<major>\\d+)-(?<minor>\\d+)-(?<patch>\\d+)T.*Z$",
      "matchPackagePatterns": ["minio"]
    },
    {
      "groupName": "Immich",
      "matchPackagePatterns": ["immich-.*"]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchDepNames": ["!app-template", "!kube-prometheus-stack", "!weave-gitops", "!postgresql", "!redis"],
      "pinDigests": true
    },
    {
      "matchUpdateTypes": ["patch", "pin"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "minimumReleaseAge": "24 hours",
      "matchDepNames": ["!rancher/k3s-upgrade"]
    },
    {
      "matchUpdateTypes": ["minor"],
      "matchPackageNames": ["!k3s-io/k3s", "!metallb", "!longhorn", "!rancher", "!*paperless-ngx*", "!*immich*"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "minimumReleaseAge": "24 hours"
    },
    {
      "matchUpdateTypes": ["major"],
      "matchPackageNames": ["ghcr.io/prometheus-community/charts/kube-prometheus-stack"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "minimumReleaseAge": "24 hours"
    }
  ]
}
