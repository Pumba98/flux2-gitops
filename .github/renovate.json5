{
  extends: [
    'config:recommended',
    ':disableRateLimiting',
    ':semanticCommits',
    ':rebaseStalePrs',
    ':separateMultipleMajorReleases',
    ':separatePatchReleases',
    'github>Pumba98/flux2-gitops//.github/renovate/commitMessage.json5',
    'github>Pumba98/flux2-gitops//.github/renovate/labels.json5',
  ],
  dependencyDashboardTitle: 'Renovate Dashboard',
  suppressNotifications: [
    'prIgnoreNotification',
  ],
  flux: {
    fileMatch: [
      '^[^\\.]*\\.ya?ml$',
    ],
  },
  'helm-values': {
    fileMatch: [
      '^apps/[^\\.]*\\.ya?ml$',
    ],
  },
  kubernetes: {
    fileMatch: [
      '^apps/[^\\.]*\\.ya?ml$',
    ],
  },
  customManagers: [
    {
      customType: 'regex',
      fileMatch: [
        '^[^\\.]*\\.ya?ml$',
      ],
      matchStrings: [
        'datasource=(?<datasource>\\S+) depName=(?<depName>.*?)\n *version: (?<currentValue>.*)\n',
      ],
      datasourceTemplate: '{{#if datasource}}{{{datasource}}}{{else}}helm{{/if}}',
    },
  ],
  packageRules: [
    {
      matchPackageNames: [
        'k3s-io/k3s',
      ],
      separateMultipleMinor: true,
    },
    {
      description: 'Use custom versioning for Minio',
      matchDatasources: [
        'docker',
      ],
      versioning: 'regex:^RELEASE\\.(?<major>\\d+)-(?<minor>\\d+)-(?<patch>\\d+)T.*Z$',
      matchPackageNames: [
        '/minio/',
      ],
    },
    {
      groupName: 'Immich',
      matchPackageNames: [
        '/immich-.*/',
      ],
    },
    {
      matchDatasources: [
        'docker',
      ],
      matchDepNames: [
        '!app-template',
        '!kube-prometheus-stack',
        '!weave-gitops',
        '!postgresql',
        '!redis',
        '!rancher/k3s-upgrade',
      ],
      pinDigests: true,
    },
    {
      matchUpdateTypes: [
        'pin',
        'pinDigest',
      ],
      automerge: true,
      automergeType: 'pr',
      automergeStrategy: 'squash',
    },
    {
      matchUpdateTypes: [
        'patch',
      ],
      automerge: true,
      automergeType: 'pr',
      automergeStrategy: 'squash',
      minimumReleaseAge: '24 hours',
    },
    {
      matchUpdateTypes: [
        'minor',
      ],
      matchPackageNames: [
        '!k3s-io/k3s',
        '!metallb',
        '!longhorn',
        '!rancher',
        '!**paperless-ngx**',
        '!**immich**',
      ],
      automerge: true,
      automergeType: 'pr',
      automergeStrategy: 'squash',
      minimumReleaseAge: '24 hours',
    },
    {
      matchUpdateTypes: [
        'major',
      ],
      matchPackageNames: [
        'ghcr.io/prometheus-community/charts/kube-prometheus-stack',
      ],
      automerge: true,
      automergeType: 'pr',
      automergeStrategy: 'squash',
      minimumReleaseAge: '24 hours',
    },
    {
      matchUpdateTypes: [
        'digest',
      ],
      matchPackageNames: [
        'ghcr.io/linuxserver/**',
        'ghcr.io/nginxinc/nginx-unprivileged',
        'alpine',
        'ubuntu/bind9',
      ],
      automerge: true,
      automergeType: 'pr',
      automergeStrategy: 'squash',
    },
  ],
}
